{
  "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "declaration": true,
      "strictNullChecks": false,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "checkJs": true
  },
  "include": [
      "src/**/*"
  ]
}